---
import BentoCard from "./BentoCard.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    image?: ImageMetadata;
    imageAlt?: string;
    title: string;
    link?: string;
    }

const { image, imageAlt, title, link } = Astro.props;
---

{link ? (
<a href={link}>
    <BentoCard classes="hover:scale-105 transition-transform duration-200 flex flex-col items-center text-center gap-2">
        {image && (
                <div class="rounded-lg overflow-hidden">
                    <Image
                            src={image}
                            alt={imageAlt || `${title} logo`}
                            class="h-48px w-48px object-cover"
                            width="96"
                            height="96"
                    />
                </div>
        )}
        <span class="text-lg">{title}</span>
        <slot />
    </BentoCard>
</a>
    ) : (
<BentoCard classes="hover:scale-105 transition-transform duration-200 flex flex-col items-center text-center gap-2">
    {image && (
            <div class="rounded-lg overflow-hidden">
                <Image
                        src={image}
                        alt={imageAlt || `${title} logo`}
                        class="h-48px w-48px object-cover"
                        width="96"
                        height="96"
                />
            </div>
    )}
    <span class="text-lg">{title}</span>
    <slot />
</BentoCard>
    )}