---
import BentoCard from "../BentoCard.astro";
import {Image} from 'astro:assets';
import profilePhoto from "../../assets/profile-photo.jpg";
---

<BentoCard colSpan="md:col-span-3" classes="text-lg">
    <div class="flex flex-col md:flex-row items-start w-full">
        <div class="flex-1">
            <p class="mb-2em">
                Hey there! I'm <strong>Ben Soyka</strong>, an undergraduate student with
                a strange range of interests.
            </p>
            <a class="btn-primary-outline" href="/cv.pdf">View CV</a>
        </div>
        <div class="rounded-lg overflow-hidden mt-4 md:mt-0 md:ml-4 w-32 h-32 shrink-0">
            <Image
                    src={profilePhoto}
                    alt="Profile photo of Ben Soyka"
                    class="h-full w-full object-cover"
                    width="128"
                    height="128"
            />
        </div>
    </div>
</BentoCard>