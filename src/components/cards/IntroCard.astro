---
import BentoCard from "../BentoCard.astro";
import profilePhoto from "../../assets/profile-photo.jpg";
---

<BentoCard colSpan="md:col-span-3"
           classes="text-lg relative">
    <div class="flex flex-col md:flex-row items-start w-full">
        <p class="flex-1">
            Hey there! I'm <strong>Ben Soyka</strong>, an undergraduate student with
            a strange range of interests.
        </p>
        <div class="w-32 h-32 rounded-lg overflow-hidden mt-4 md:mt-0 md:ml-4">
            <img
                    src={profilePhoto.src}
                    alt="Profile photo of Ben Soyka"
                    class="h-full w-full object-cover"
            />
        </div>
    </div>
</BentoCard>